<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/t_update"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".update_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_name_update"
            android:layout_width="317dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/ultra"
            android:gravity="center"
            android:text="Computer"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/list_edit"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_format_list_numbered_rtl_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_display"
            android:layout_width="342dp"
            android:layout_height="32dp"
            android:fontFamily="@font/baloo_paaji"
            android:text="Add Items"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/tv_add_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/add_main_button" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/update_list"
        android:layout_width="match_parent"
        android:layout_height="255dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p_update"
            android:layout_width="141dp"
            android:layout_height="45dp"
            android:text="Priority "
            android:textColor="@color/black" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@color/white"

                android:outlineAmbientShadowColor="#f7fd04"


             
                android:text="High"
                android:textColor="#FFFF00"
                android:textStyle="bold" />

            <RadioButton
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Medium"



                android:textColor="#78D85E"
                android:textStyle="bold" />

            <RadioButton
                android:layout_width="70dp"

                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="Low"
                android:textColor="#DD1B1B"
                android:textStyle="bold" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/d_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Date"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/show_date_update"
            android:layout_width="146dp"
            android:layout_height="38dp"

            android:layout_weight="1"
            android:text="23-5-2021" />

        <ImageView
            android:id="@+id/ivdate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="openDatePicker"
            android:src="@drawable/ic_baseline_edit_calendar_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Time"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6:12 pm" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_access_time_filled_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/show_time_update"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"


            />

        <ImageView
            android:id="@+id/ivtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_access_time_filled_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/repeat_update"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Repeat"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/ivrepeat_update"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/repeat" />

        <ImageView
            android:id="@+id/ivrepeat2_update"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/repeat_"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="419dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ivback_add_update"
            android:layout_width="165dp"
            android:layout_height="38dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#DA85BD"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <Button
            android:id="@+id/btsaved_update"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Updateed The List"
            app:backgroundTint="#26022C" />
    </LinearLayout>

</LinearLayout>